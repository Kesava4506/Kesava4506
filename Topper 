#include <stdio.h>
struct student
{
    char name[50];
    int marks[5];
    float average;
};

void main() 
{
       struct student s[3];
       for(int i=0;i<5;++i)
       {
            printf("Enter the information of the students %d: \n",i+1);
             scanf("%s",s[i].name);
      }
     int sum=0,i;
     printf("enter five sub marks of the students : %d\n");
     for(int j=0;j<5;j++)
     {
         scanf("%d",&s[i].marks[j]);
         sum+=s[i].marks[j];
     }
     s[i].average=(float)sum/5.0;
     printf("\n");
}

int maxindex=0;
float maxaverage=s[0].average;
if(maxaverage>s[i].average)
{
    for(int i=1;i<5;i++)
    {
      maxindex=1;
     maxaverage=s[i].average;   
    }
 printf("the topper name :%s\n",s[maxindex].name);
 printf("the avg marks of the topper is %2f\n",s[maxindex].average);
}